{
    "name": "judah-ui",
    "description": "my first attempt at creating an npm package for ui library",
    "private": false,
    "version": "0.1.1",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/DebayoTomisin/Judah-ui"
    },
    "keywords": [
        "judah",
        "judah-ui"
    ],
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "main": "dist/judahui.cjs.js",
    "module": "dist/judahui.es.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/judahui.js",
            "require": "./dist/judahui.umd.cjs"
        },
        "./dist/style.css": "./dist/style.css"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "watch": "vite & tcm --watch",
        "check:up-to-date-types": "tcm --listDifferent ."
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "peerDependencies": {
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.5.9",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react-swc": "^3.3.2",
        "autoprefixer": "^10.4.15",
        "eslint": "^8.45.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "postcss": "^8.4.29",
        "react": "^18.2.0",
        "tailwindcss": "^3.3.3",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.7",
        "typed-css-modules": "^0.7.2",
        "typescript": "^5.0.2",
        "vite": "^4.4.5",
        "vite-plugin-dts": "^3.5.3",
        "vite-tsconfig-paths": "^4.2.0"
    }
}
